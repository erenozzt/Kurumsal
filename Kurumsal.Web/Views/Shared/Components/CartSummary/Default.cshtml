@model Kurumsal.Web.Models.CartSummaryViewModel


 
<ul class="dropdown-menu">
    @foreach (var item in Model.Cart.CartLines)
    {
        <li><a>@item.Product.ProductName <span class="badge">@item.Quantity</span></a></li>
    }
    <li role="separator" class="divider"></li>
    <li role="separator" class="divider"><a><span class="glyphicon glyphicon-align-left glyphicon-shopping-cart" aria-hidden="true">@Model.Cart.Total</span></a></li>
        <li role="separator" class="divider"></li>
    <li><a asp-controller="Cart" asp-action="List">Go To Cart Details</a></li>
</ul> 