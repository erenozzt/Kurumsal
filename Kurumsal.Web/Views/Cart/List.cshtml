@model Kurumsal.Web.Models.CartSummaryViewModel

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/_Layout.cshtml";
}

<h1>List</h1>

<p>
    <a>Your Cart</a>
</p>
<table class="table">
 
        <tr>
            <td>Name</td>
            <td>Price</td>
            <td>Stock</td>
            <td>Quantity</td>
            <td></td>
        </tr>
   

    @foreach (var item in Model.Cart.CartLines)
    {
        <tr>
            <td>@item.Product.ProductName</td>
            <td>@item.Product.UnitPrice</td>
            <td>@item.Product.UnitsInStock</td>
            <td>@item.Quantity </td>
            <td class="text-right">
                <a class="btn btn-xs btn-danger" asp-controller="Cart" asp-action="Remove" asp-route-productId="@item.Product.ProductId"><span>Remove From Cart</span></a>
            </td>
        </tr>
    }
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td><h3>Total</h3></td>
        <td class="text-right"><strong>@Model.Cart.Total</strong></td>
    </tr>
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td><a asp-controller="Product" asp-action="List"> <span>Continue Shopping</span></a></td>
        <td><a asp-controller="Cart" asp-action="Complete" class="btn-primary btn-xs btn">Go To Checkout</a></td>
    </tr>

</table>
